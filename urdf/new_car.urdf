<?xml version="1.0"?>
<robot name="new_car">

    <link name="footprint">
        <visual>
            <geometry>
                <sphere radius="0.001" />
            </geometry>
        </visual>
    </link>

    <link name="car_base">
        <visual>
            <geometry>
                <box size="0.5 0.2 0.1" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="blue">
                <color rgba="0 0 1.0 0.5" />
            </material>
        </visual>
    </link>

    <joint name="footprint2base" type="fixed">
        <parent link="footprint"/>
        <child link="car_base"/>
        <origin xyz="0 0 0.001"/>
    </joint>

    <link name="camera">
        <visual>
            <geometry>
                <box size="0.02 0.05 0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="red">
                <color rgba="1 0 0 0.5"/>
            </material>
        </visual>
    </link>

    <joint name="camera2base" type="continuous">
        <parent link="car_base"/>
        <child link="camera"/>
        <origin xyz="0.2 0 0.075" rpy="0 0 0"/>
        <axis xyz="0 0 1" />
    </joint>
</robot>